---
import siteData from "../data/siteData.json";

const {
  metaTitle,
  metaDescription,
  image,
  frontmatter,
  robots,
} = Astro.props;
---

<!-- SEO -->
<meta name="title" content={metaTitle ? metaTitle:siteData.title} />
<meta name="description" content={metaDescription ? metaDescription:siteData.description} />

<!-- Open Graph -->
<meta property="og:site_name" content={siteData.site_name} />
<meta property="og:title" content={metaTitle ? metaTitle:siteData.title} />
<meta property="og:description" content={metaDescription ? metaDescription:siteData.description} />
<meta property="og:url" content={Astro.url} />
<meta property="og:image" content={image?.url || siteData.image.src} />
<meta property="og:image:url" content={image?.url || siteData.image.src} />
<meta
  property="og:image:secure_url"
  content={image?.url || siteData.image.src}
/>
<meta property="og:image:type" content={image?.mime || siteData.image.mime} />
<meta property="og:image:width" content={image?.width || siteData.image.width} />
<meta property="og:image:height" content={image?.height || siteData.image.height} />
<meta property="og:image:alt" content={image?.alt || siteData.image.alt} />

<!-- Twitter -->
<meta name="twitter:title" content={metaTitle ? metaTitle:siteData.title} />
<meta name="twitter:description" content={metaDescription ? metaDescription:siteData.description} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content={image?.url || siteData.image.src} />
<meta name="twitter:image:alt" content={metaTitle ? metaTitle:siteData.title} />
<meta name="twitter:domain" content={import.meta.env.SITE} />

{robots && <meta name="robots" content="noindex, nofollow" />}
