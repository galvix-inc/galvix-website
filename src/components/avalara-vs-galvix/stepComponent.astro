---

const { steps } = Astro.props.stepsData;
---

<dl class=" grid">
  <div class="flex gap-5 max-md:flex-col max-md:gap-0">
    {steps.map((step) => (
      <div class="flex flex-col w-[33%] max-md:ml-0 max-md:w-full" >
        <div class="flex flex-col grow  mt-8">
          
          <div class="mt-2 text-base  leading-6 text-indigo-600">
            Step {step.step}
          </div>
          <div class="mt-1.5 text-xl font-semibold leading-7 text-gray-900">
            {step.heading}
          </div>
          <img loading="lazy" src={step.imgSrc} alt={`Step ${step.step} Image`} class="mt-5 w-full aspect-[2.78]" />
          <ul class="mt-4 ml-2 list-disc list-inside">
            {step.descriptions.map((description, index) => (
              <li  class="text-base leading-6 text-gray-600 pb-2">
                {description}
              </li>
            ))}
          </ul>
        </div>
      </div>
    ))}
  </div>
</dl>
