---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
    <div class="mt-8 flow-root">
        <div class="mx-auto max-w-7xl md:px-8 justify-center flex">
            <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
                <table class="min-w-full divide-y divide-gray-300">
                <thead>
                    <tr>
                    <th scope="col" class="w-60 py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-3">Name</th>
                    <th scope="col" class="w-24 px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Title</th>
                    <th scope="col" class="w-24 px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Email</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    <tr class="even:bg-gray-100">
                        <td class="py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-3">This is a long long long long text</td>
                        <td class="px-3 py-4 text-sm text-gray-500">Yes</td>
                        <td class="px-3 py-4 text-sm text-gray-500">No</td>
                    </tr>
                    <tr class="even:bg-gray-100">
                        <td class="py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-3">Lindsay Walton</td>
                        <td class="px-3 py-4 text-sm text-gray-500">Yes</td>
                        <td class="px-3 py-4 text-sm text-gray-500">No</td>
                    </tr>
        
                    <!-- More people... -->
                </tbody>
                </table>
                </div>
            </div>
        </div>
</BaseLayout>