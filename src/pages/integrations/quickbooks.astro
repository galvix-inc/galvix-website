---
import BaseLayout from "../../layouts/BaseLayout.astro";
import stepsData from "../../components/avalara-vs-galvix/stepData.json";
import FAQ from "../../components/managed-returns/FAQ";
import { faqsQuickBooksOnlineIntegration } from "../../data/faqs";
import StepsComponent from "../../components/avalara-vs-galvix/stepComponent.astro";
import Comparison from "../../components/avalara-vs-galvix/comparison.astro";
import Comparison2 from "../../components/avalara-vs-galvix/comparison2.astro";
import CompanyLogos from "../../components/avalara-vs-galvix/companylogos.astro";
import WhyGalvix from "../../components/avalara-vs-galvix/whyGalvix.astro";
import FooterCard from "../../components/avalara-vs-galvix/footerCard.astro";
import { XMarkIcon } from "@heroicons/react/24/outline";
---

<BaseLayout>
  <div class="bg-white">
    <div class="bg-white">
      <!-- Header -->

      <main class="isolate overflow-hidden">
        <!-- Hero section -->
        <div class="relative pt-20 pb-10 lg:pb-0">
          <div
            class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
            aria-hidden="true"
          >
            <div
              class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"
              style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
            >
            </div>
          </div>
          <div class="flex justify-center py-4">
            <p
              class="relative rounded-full px-4 py-1.5 text-sm leading-6 text-gray-600 ring-1 ring-inset ring-gray-900/10 hover:ring-gray-900/20"
            >
              <span class="md:inline">Galvix + QuickBooks Online</span>
            </p>
          </div>
          <div class="">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
              <div class="mx-auto max-w-4xl text-center">
                <h1
                  class="text-xl font-bold tracking-tight text-gray-900 sm:text-4xl"
                >
                  Automated Sales Tax Compliance for QuickBooks Online
                </h1>
                <div
                  class="self-stretch text-lg leading-7 text-center text-gray-600 mx-auto my-5"
                >
                  <span class="font-semibold text-md"
                    >Connect Galvix with QuickBooks Online</span
                  > to automate sales tax calculation, tracking, and filing‚Äîaccurately
                  and effortlessly.
                </div>
                <div
                  class="flex flex-col sm:flex-row gap-5 text-md leading-7 text-gray-600 py-5"
                >
                  <div class="flex flex-1 gap-4 pr-5">
                    <div class="flex-1 text-left">
                      üßæ <span class="font-semibold text-md"
                        >1-Click Tax Return Filing</span
                      > in all US states
                    </div>
                  </div>
                  <div class="flex flex-1 gap-4 pr-5">
                    <div class="flex-1 text-left">
                      üìç <span class="font-semibold text-md"
                        >Automated Nexus Tracking</span
                      > so you never miss a threshold
                    </div>
                  </div>
                  <div class="flex flex-1 gap-4 pr-5">
                    <div class="flex-1 text-left">
                      üèõÔ∏è <span class="font-semibold text-md"
                        >State Tax Registrations? 100% Done-For-You</span
                      >
                    </div>
                  </div>
                  <div class="flex flex-1 gap-4 pr-5">
                    <div class="flex-1 text-left">
                      ‚ö° <span class="font-semibold text-md"
                        >Real-Time Tax Calculation</span
                      > on every invoice & credit memo in QuickBooks Online
                    </div>
                  </div>
                </div>

                <div class="mt-10 flex items-center justify-center gap-x-6">
                  <a
                    href="https://calendly.com/piyushag1/galvix-intro"
                    target="_blank"
                    class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                    >Talk to Galvix</a
                  >
                </div>
              </div>
              <div class="mt-16 flow-root sm:mt-24 px-1 lg:w-full w-[40rem]">
                <div
                  class="-m-2 rounded-xl bg-gray-900/5 p-2 ring-1 ring-inset ring-gray-900/10 lg:-m-4 lg:rounded-2xl"
                >
                  <img
                    src="/images/avalara-vs-galvix/returns-table.svg"
                    alt="App screenshot"
                    class="rounded-md shadow-2xl ring-1 ring-gray-900/10 lg:w-full"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Componay logo -->
        <div class="pt-8 lg:pt-24">
          <div class="pb-8 border-b border-gray-200">
            <div class="mx-auto max-w-7xl">
              <span
                class="text-gray-600 text-md flex justify-center text-center pb-6 px-6"
              >
                Accountants and business owners like you use Galvix for sales
